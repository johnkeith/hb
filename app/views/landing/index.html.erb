<div class="landing-container">
	<div class="landing-background"></div>
	<div class="logo-holder">
			<div class="logo center-block">
				<%= image_tag("gohuckleberry.com-logo-black.png", class: "img-responsive") 
				%>
			</div>
		</div>
	<div class="jumbotron">
		<div class="row">
			<div class="col-md-12">
				<h1 class="text-center">An international network of travelers and friends</h1>
			</div>
		</div>

		<div class="row">
			<div class="col-md-12">
				<div class="row row-with-headroom row-with-legroom">
					<div class="col-md-4 text-center">
						<button class="btn btn-default btn-lg btn-clear">Learn More</button>
					</div>
					<div class="col-md-4 text-center">
						<%= link_to 'Create an Account', new_user_registration_path, class: 'btn btn-success btn-lg' %>
					</div>
					<div class="col-md-4 text-center">
						<%= link_to 'Sign In', new_user_session_path, class: 'btn btn-default btn-lg btn-clear' %> 
					</div>
				</div>
			</div>
		</div>
	</div>	
	
</div>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<div class='inserted-new-user-registration'></div>
		<%# render 'devise/registrations/new_form' %>
	</div>
</div>
