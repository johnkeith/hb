<h2>Personal Information</h2>
<%= form_for @profile, remote: true do |f| %>
	<%= f.label :first_name, 'First Name' %>
	<%= f.text_field :first_name %>

	<br />

	<%= f.label :last_name, 'Last Name' %>
	<%= f.text_field :last_name %>

	<br />

	<%= f.label :personal_description, 'Please describe yourself!' %>
	<%= f.text_area :personal_description %>

	<br />

	<%= f.label :city_description, 'Please describe where you live!' %>
	<%= f.text_area :city_description %>

	<br />

	<%= f.label :age, 'Age' %>
	<%= f.number_field :age, in: 0..150, step: 1 %>

	<br />

	<%= f.submit 'Update Personal Information' %>
<% end %>

<h2>Location Information</h2>
<%= form_for @location, url: edit_location_profile_path, method: 'POST', remote: true do |f| %>
	<%= f.label :city, 'City' %>	
	<%= f.text_field :city %>

	<br />

	<%= f.label :state, 'State' %>	
	<%= f.text_field :state %>

	<br />

	<%= f.label :country, 'Country' %>	
	<%= f.text_field :country %>

	<br />
	
	<%= f.submit 'Save Location Information' %>
<% end %>