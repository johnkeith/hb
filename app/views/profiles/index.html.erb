<div class="row">
	<% @profiles.each do |p| %>
	<div class="col-md-3">
		<div class="thumbnail">
			<div class="caption">
				<small class="profile-location"><strong><%= p.try(:location).try(:country) %></strong></small>
			</div>
			<a href="<%= profile_path(p) %>"><div class="profile-initials"><%= "#{p.first_name.try(:[], 0)} #{p.last_name.try(:[], 0)}" %></div></a>
			<div class="caption">
				<p><%= p.personal_description %></p>
			</div>
			<p>
				<%= link_to "Let's Talk", profile_path(p), class: 'btn btn-primary btn-sm' %> 
				<%= link_to 'Learn More', profile_path(p), class: 'btn btn-default btn-sm' %> 
			</p>
		</div>
	</div>
	<% end %>
</div>

