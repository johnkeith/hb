<%= form_for @location, url: create_or_associate_location_path, method: 'POST', remote: true do |f| %>
	<div class="form-group">
		<%= f.label :city, 'City' %>	
		<%= f.text_field :city, class: "form-control input-lg" %>
	</div>

	<div class="form-group">
		<%= f.label :state, 'State' %>	
		<%= f.text_field :state, class: "form-control input-lg" %>
	</div>

	<div class="form-group">
		<%= f.label :country, 'Country' %>	
		<%= f.text_field :country, class: "form-control input-lg" %>
	</div>
	
	<%= f.submit 'Save Location Information', class: 'profile-submit hidden' %>
<% end %>