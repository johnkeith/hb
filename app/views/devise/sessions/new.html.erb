<h2>Sign In</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	<div class="form-group">
		<%# f.label :email %>
	  <%= f.email_field :email, placeholder: 'Email', autofocus: true, class: "form-control input-lg" %>
  </div>

  <div class="form-group">
  	<%# f.label :password %>
    <%= f.password_field :password, placeholder: 'Password', autocomplete: "off", class: "form-control input-lg" %>
 	</div>

	<% if devise_mapping.rememberable? -%>
	  <div class="form-group">
		  <%= f.check_box :remember_me %>
		  <%= f.label :remember_me %>
	  </div>
	<% end -%>

  <div><%= f.submit "Log in", class: "btn btn-primary btn-lg btn-full" %></div>
<% end %>

<%= render "devise/shared/links" %>
